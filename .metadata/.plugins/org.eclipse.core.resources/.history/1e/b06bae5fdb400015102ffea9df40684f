import exceptions
#列出模块内容
print  dir(exceptions)
#自定义异常
class MyException(Exception):
    pass

#########################    捕捉异常
class MuffledCalculator():
    def calculate(self,expression):
        try:
            print eval(expression)
        except ZeroDivisionError:
            print("分母出现0")
        except TypeError:
            print("除数、被除数类型不对")
        except NameError:
            print("存在未定义的参数")
        except Exception:
            raise
    #用一个块捕捉多个异常
    def cal(self,expression):
        try:
            print eval(expression)
        except (ZeroDivisionError,TypeError,NameError):
            print("存在bug")
    def cal(self,expression):
        try:
            print eval(expression)
        except (ZeroDivisionError,TypeError,NameError):
            print("存在bug")
muff=MuffledCalculator()
muff.calculate('1/0')                   #分母出现0
muff.calculate("2/'s'")                 #除数、被除数类型不对
muff.calculate("2/s")                   #存在未定义的参数
muff.cal("2/s")                         #存在bug


