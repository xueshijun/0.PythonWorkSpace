import exceptions
#列出模块内容
print  dir(exceptions)
#自定义异常
class MyException(Exception):
    pass

#########################    捕捉异常
class MuffledCalculator():
    def calculate(self,expression):
        try:
            print eval(expression)
        except ZeroDivisionError:
            print("分母出现0")
        except TypeError:
            print("除数、被除数类型不对")
        except Exception:
            raise

muff=MuffledCalculator()
muff.calculate('1/0')
muff.calculate('1/s')


